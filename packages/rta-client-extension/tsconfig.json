{
    "extends": "../../tsconfig.json",
    "include": [
        "src",
        "test",
        "types"
    ],
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "open/ux/rta/ext/*": [
                "./src/*"
            ]
        },
        "types": [
            "@sapui5/types",
            "jest"
        ]
    }
}